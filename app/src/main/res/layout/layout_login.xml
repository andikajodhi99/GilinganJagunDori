<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/warnabg"
    android:layout_height="match_parent">



<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/jagung_kiri"
    android:layout_marginTop="120dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"

        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@drawable/ic_form_2"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/input_text_email_login"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@null"
            android:layout_height="@dimen/size_40dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:background="@drawable/ic_form_2"
        android:layout_height="60dp">

        <EditText
            android:id="@+id/input_text_password_login"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:layout_height="@dimen/size_40dp">
        </EditText>
    </LinearLayout>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@drawable/jagung_kanan"
    android:layout_marginLeft="330dp"/>

    <Button
        android:id="@+id/btn_masuk_layout_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="MASUK"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_form_2">
    </Button>

    <Button
        android:id="@+id/btn_daftar_layout_login"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="DAFTAR"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_form_2">
    </Button>
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rumput"
    android:layout_marginTop="200dp"/>


</LinearLayout>